<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/CSS/register.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <script src="/JS/register.js" defer ></script>
    <title>Register | Stargreen</title>
</head>
<body>
    <div class="stargreen-box">
        <div class="stargreen-icon">
            <a class="stargreen-text-titulo" href="/index.html">STARGREEN</a>
            <a href="/index.html">
                <img src="/IMG/descarga (3).png" alt="">
            </a>
        </div>

        <% if(typeof mensaje !== "undefined"){ %>
            <p class="mensaje-alerta">
                <%= mensaje %>
            </p>

        <% }%>

        <% if(typeof mensaje1 !== "undefined"){ %>
            <p class="mensaje-alerta2">
                <%= mensaje1 %>
            </p>

        <% }%>

        <form class="register-box" action="/valid" method="post">
            <div class="register-header">
                <header>Register</header>
            </div>
            <div class="input-box">
                <label for="user"></label>
                <input type="text" class="input-field" placeholder="Usuario" autocomplete="off" required   id="user" name="user">
            </div>
            <div class="input-box">
                <label for="user"></label>
                <input type="email" class="input-field" placeholder="Email" autocomplete="off" required   id="user_email" name="user_email">
            </div>
            <div class="input-box">
                <label for="password"></label>
                <input type="password" class="input-field" placeholder="Password" autocomplete="off" required id="password" name="password">
            </div>
            <div class="forgot">
                <section>
                    <input type="checkbox" id="check">
                    <label for="check">You accept the Terms And Conditions?</label>
                </section>
            </div>


            <div class="input-submit">
                <button class="submit-btn" id="submit" value="registrar"></button>
                <label for="submit">Create account</label>
                <input class="submit-btn para-fuera" type="submit" value="registrar">
            </div>
            <div class="sign-up-link">
                <p>You have a account? <a href="./login.ejs">Sign In</a></p>
            </div>
        </div>
    </form>
</body>
</html>
